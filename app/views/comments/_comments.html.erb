<li>
  <span class="comment"><%= comment.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <% if current_user?(comment.user) %>
      <%= link_to "delete", comment, method:  :delete,
                  confirm: "You sure?",
                  title:   comment.content %>
  <% end %>
</li>