<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= image_tag @user.avatar.url(:medium), id: "avatar"%>
      </h1>
    </section>
      <%= render 'users/follow_form' if signed_in? %>
    <section>
      <%= render 'users/stats' %>
    </section>
  </aside>
  <div class="span8">
    <div class="info">
      <%= render 'users/info' %>
    </div>
    <div class="wall">
      <div class="nav-border">
        <h3><%= t ".microposts" %></h3>
      </div>
      <% if current_user == @user %>
        <%= render 'shared/micropost_form' %>
      <% end %>
      <% if @user.microposts.any? %>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
          <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>
