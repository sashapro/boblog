<% @user ||= current_user %>

  <section class="stats">
    <div class="nav-border">
      <a href="<%= following_user_path(@user) %>">
        <%= t "shared._stats.following" %>
        <strong id="following" class="stat">
          <%= @user.followed_users.count %>
        </strong>
      </a>
    </div>
    <%= render 'users/sidebar', :users => @user.followed_users %>
  </section>

  <section class="stats">
    <div class="nav-border">
      <a href="<%= followers_user_path(@user) %>">
        <%= t "shared._stats.followers" %>
        <strong id="followers" class="stat">
          <%= @user.followers.count %>
        </strong>
      </a>
    </div>
    <%= render 'users/sidebar', :users => @user.followers %>
  </section>
