<%= provide(:title, @title) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= image_tag current_user.avatar.url(:medium), id: "avatar"%>
      </h1>
    </section>
    <section>
      <%= render 'stats' %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>
