<h2><%= t("devise.registrations.new.edit") %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

    <%= f.label t("devise.registrations.new.avatar") %>
    <%= f.file_field :avatar %>

    <%= f.label t("devise.registrations.new.nik") %>
    <%= f.text_field :nik %>

    <%= f.label t("users.info.status") %>
    <%= f.text_field :status %>

    <%= f.label t("devise.registrations.new.name") %>
    <%= f.text_field :name %>

    <%= f.label t("devise.registrations.new.surname") %>
    <%= f.text_field :surname %>

    <%= f.label t("devise.registrations.new.email") %>
    <%= f.text_field :email %>

    <%= f.label t("devise.registrations.new.born_on") %>
    <%= f.date_select :born_on, start_year: 1900 %>

    <%= label_tag(:female, "Sex:") %>
    <%= radio_button_tag(:female, '1') %>
    <%= label_tag(:female, "Female") %>
    <%= radio_button_tag(:female, '0') %>
    <%= label_tag(:female, "Male") %>

    <%= f.label t("users.info.about") %>
    <%= f.text_field :about %>

  <div><%= f.label t("devise.registrations.new.current_password") %>
    <i><%= t("devise.registrations.new.info") %></i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit t("devise.registrations.new.update") %></div>
<% end %>



<%= link_to t("devise.registrations.new.back"), :back %>
